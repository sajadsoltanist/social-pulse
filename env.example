# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/socialpulse
POSTGRES_DB=socialpulse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters

# Instagram API Credentials
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# Monitoring Configuration
MONITORING_INTERVAL_MINUTES=60

# Optional: Development Settings
DEBUG=false

# Optional: Logging Level
LOG_LEVEL=INFO

# Optional: API Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Optional: JWT Token Expiration (hours)
ACCESS_TOKEN_EXPIRE_HOURS=24

# Optional: Instagram API Settings
INSTAGRAM_DELAY_RANGE_MIN=1
INSTAGRAM_DELAY_RANGE_MAX=3
INSTAGRAM_REQUEST_TIMEOUT=30

# Optional: Telegram Settings
TELEGRAM_PARSE_MODE=HTML
TELEGRAM_DISABLE_WEB_PAGE_PREVIEW=true

# Optional: Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Optional: Celery Worker Settings
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500 